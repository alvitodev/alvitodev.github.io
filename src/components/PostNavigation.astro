---
import { Icon } from 'astro-icon/components'

const { newerPost, olderPost } = Astro.props
---

<div class="flex flex-col gap-4 sm:flex-row sm:justify-between border-t border-zinc-800 pt-8 mt-8">
  {
    olderPost ? (
      <a
        href={`/writing/${olderPost.id}`} 
        class="group flex flex-col gap-1 text-left sm:max-w-[45%]"
      >
        <span class="flex items-center gap-1 text-xs font-mono text-zinc-500 group-hover:text-amber-500 transition-colors">
          <Icon name="lucide:arrow-left" class="size-3" />
          PREVIOUS_LOG
        </span>
        <span class="text-sm font-bold text-zinc-300 group-hover:text-white transition-colors line-clamp-2">
          {olderPost.data.title}
        </span>
      </a>
    ) : (
      <div />
    )
  }

  {
    newerPost && (
      <a
        href={`/writing/${newerPost.id}`}
        class="group flex flex-col gap-1 text-right sm:max-w-[45%]"
      >
        <span class="flex items-center justify-end gap-1 text-xs font-mono text-zinc-500 group-hover:text-amber-500 transition-colors">
          NEXT_LOG
          <Icon name="lucide:arrow-right" class="size-3" />
        </span>
        <span class="text-sm font-bold text-zinc-300 group-hover:text-white transition-colors line-clamp-2">
          {newerPost.data.title}
        </span>
      </a>
    )
  }
</div>