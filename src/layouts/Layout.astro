---
import '@/styles/global.css'
import '@/styles/typography.css'
import '@fontsource/jetbrains-mono'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
	class?: string;
	title?: string; // Tambahkan ini
	description?: string; // Tambahkan ini (opsional, bagus untuk SEO)
}

const { class: className, title, description } = Astro.props;
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head title={title} description={description}> <slot name="head" />
    </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    {/* --- HEADER UTAMA --- */}
        <header
          class="sticky top-0 z-50 w-full border-b border-zinc-800 bg-zinc-950/80 backdrop-blur-md"
        >
          <Header />
          
          {/* Slot untuk navigasi khusus artikel (Subposts/TOC Mobile) */}
          {/* Kita beri border-top agar ada pemisah halus jika slot ini aktif */}
          <div class="contents [&:not(:empty)]:block [&:not(:empty)]:border-t [&:not(:empty)]:border-zinc-800">
            <slot name="subposts-navigation" />
            <slot name="table-of-contents" />
          </div>
        </header>
    <main
      class={cn('w-full mx-auto flex grow flex-col gap-y-6 px-4', className)}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
